<fieldset>
  <legend>Infos</legend>
  <%= value('Compte', "<a href=\"/account/#{@account.name}\">#{@account.name}</a>") %>
  <% if @user_logged %>
    <%= value('De', @original_message.from) %>
    <%= value('À', @original_message.to) %>
  <% end %>
  <%= value('Envoi', "<a href=\"/message/#{Integer(@original_message.sent_at.to_f)}\">#{affiche_date_heure(@original_message.sent_at)}</a>") %>
  <% if @original_message.average_time_to_receive %>
    <%= value('Délai d\'arrivée moyen pour ce message', "#{@original_message.average_time_to_receive}s") %>
  <% end %>
  <%= value('Délai pour ce compte', "#{@received_message.delay}s") %>
  <br/>

  <%= value('Sujet', @original_message.subject) %>
  <% if @user_logged %>
    <%= value_under('Contenu original', @original_message.body) %>
    <br/>
    <%= value_under('Contenu reçu', @received_message.raw_content) %>
  <% end %>
</fieldset>